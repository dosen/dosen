html, body
  height 100%

a.name
  color white
  text-decoration none
  text-align center
  font-family 'Press Start 2P', cursive
  p
    margin 0

#ready
  box-shadow 10px 10px
  line-height 50px
  width 300px
  background-color white
  margin 15px auto
  color black
  opacity 0
  transition opacity 1s

  &:active
    position relative
    top 10px
    left 10px
    box-shadow none

#mocha
  background-color #333
  color white
  border-radius 20px
  height 80%
  overflow scroll
  margin-top 0

  h1
    margin 0
    font-size 12px
  h2
    font-size 10px

  .suite
    float left
    margin 0

  .test
    display flex
    line-height 1
    a.replay
      display none

