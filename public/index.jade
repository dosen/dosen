doctype html
html(lang="ja" ng-app="dosenApp")
  head
    meta(charset="UTF-8")
    title dosen
    script(src="bower_components/angular/angular.js")
    script(src="dosenApp.js")
    link(rel="stylesheet",href="index.css")
    body(ng-style="{'background-color': bgcolor}")
    h1 dosen
    input(type="color" ng-model="bgcolor" ng-init="bgcolor='#333333'")
    .competition(ng-controller="CompetitionCtrl as c")
      .competitor.competition__competitor
        p.competitor__input
          input(type="text" ng-model="c.companion.name")
          input(type="submit" ng-click="c.companion.update()")
        p.competitor__image
          img(src="//placehold.it/300x230")
        .metric.competitor__metric(ng-repeat="metric in c.companion.metrics")
          p.metric__icon(ng-class="metric.icon") &#10145;
          p.metric__name {{metric.name}}
          p.metric__text {{metric.text}}
      .competitor.competition__competitor
        p.competitor__input
          input(type="text" ng-model="c.opponent.name")
          input(type="submit" ng-click="c.opponent.update()")
        p.competitor__image
          img(src="//upload.wikimedia.org/wikipedia/commons/thumb/d/dc/Elephant_near_ndutu.jpg/500px-Elephant_near_ndutu.jpg")
        .metric.competitor__metric(ng-repeat="metric in c.opponent.metrics")
          p.metric__icon(ng-class="metric.icon") &#10145;
          p.metric__name {{metric.name}}
          p.metric__text {{metric.text}}
