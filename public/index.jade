doctype html
html(lang="ja",ng-app="dosenApp")
  head
    meta(charset="UTF-8")
    title dosen
    script(src="bower_components/angularjs/angular.js")
    script(src="dosenApp.js")
    link(rel="stylesheet",href="index.css")
  body
    h1 dosen
    .competition(ng-controller="CompetitionCtrl as c")
      .competition__competitor
        p.competitor__input
          input(type="text" ng-model="c.companion.name")
          input(type="submit" ng-click="c.companion.update()")
        p.competitor__image
          img(src="http://placehold.it/300x230")
        .metric.competitor__metric(ng-repeat="metric in c.companion.metrics")
          p.metric__icon(ng-class="metric.icon") &#10145;
          p.metric__name {{metric.name}}
          p.metric__value {{metric.value}}
      .competition__competitor
        p.competitor__input
          input(type="text" ng-model="c.opponent.name")
          input(type="submit" ng-click="c.opponent.update()")
        p.competitor__image
          img(src="http://placehold.it/300x230")
        .metric.competitor__metric(ng-repeat="metric in c.opponent.metrics")
          p.metric__icon(ng-class="metric.icon") &#10145;
          p.metric__name {{metric.name}}
          p.metric__value {{metric.value}}
