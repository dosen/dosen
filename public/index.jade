doctype html
html(lang="ja",ng-app="dosenApp")
  head
    meta(charset="UTF-8")
    title dosen
    script(src="bower_components/angularjs/angular.js")
    script(src="bower_components/jquery/dist/jquery.min.js")
    script(src="animal.js")
    script(src="index.js")
    script(src="extractor.js")
    script(src="wikipedia.js")
    link(rel="stylesheet",href="index.css")
  body(ng-controller="MetricListCtrl as c")
    h1 dosen
    each p in [1, 2]
      .pane(id="pane_#{p}")
        p
          input(type="text" ng-model="c.name")
          input(type="submit" ng-click="c.submit()")
        .metric(ng-repeat="metric in c.metrics")
          p.metric__icon(ng-class="metric.icon") &#10145;
          p.metric__name {{metric.name}}
          p.metric__value {{metric.value}}
